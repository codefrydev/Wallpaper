@page "/"
<PageTitle>Wallpaper</PageTitle>
<br />
<br />
<br />
<MudContainer Class="center-container">
    <MudPaper Elevation="0" Style="background-color:#e5e9f4" Class="d-flex flex-wrap gap-4">
        @foreach (var mode in modes)
        {
            <MudPaper Elevation="0"
                      Style="background-color:#e5e9f4"
                      @onmouseenter="@(()=>MouseEnter(mode))"
                      @onmouseout="@(()=>MouseExit(mode))" Width="230px" MaxHeight="300px"
                      @onclick="@(()=>Selected(mode))">
                <MudCard Class="modeIsHovering">
                    <MudCardMedia Image="images/door.jpg" Height="100" />
                    <MudCardContent>
                        <MudText Typo="Typo.h5">@mode.Name</MudText>
                        <MudText Typo="Typo.body2">@mode.Description</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Secondary" @onclick="@(()=>Selected(mode))">OPen</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudPaper>


        }
    </MudPaper>
</MudContainer>
<style>
    .modeIsHovering:hover {
        color: lightgreen;
        background: black;
    }

    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>