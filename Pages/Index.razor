@page "/"
<PageTitle>Wallpaper Generator</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <!-- Hero Section -->
    <MudPaper Elevation="0" Class="hero-section pa-8 mb-8">
        <MudStack AlignItems="AlignItems.Center" Spacing="4">
            <MudText Typo="Typo.h2" Class="text-center" Style="background: linear-gradient(135deg, #6366f1, #8b5cf6); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                🎨 Wallpaper Generator
            </MudText>
            <MudText Typo="Typo.h6" Class="text-center" Style="color: #64748b; max-width: 600px;">
                Create stunning, algorithm-generated wallpapers or explore hand-drawn artistic creations
            </MudText>
        </MudStack>
    </MudPaper>

    <!-- Mode Selection Cards -->
    <MudGrid>
        @foreach (var mode in modes)
        {
            <MudItem xs="12" sm="6" md="6">
                <MudPaper 
                    Elevation="8" 
                    Class="mode-card pa-6"
                    @onmouseenter="@(()=>MouseEnter(mode))"
                    @onmouseout="@(()=>MouseExit(mode))" 
                    @onclick="@(()=>Selected(mode))"
                    Style="@mode.ModeStyle">
                    <MudStack Spacing="4">
                        <MudStack AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@mode.Icon" Size="Size.Large" Style="font-size: 3rem;" />
                            <MudText Typo="Typo.h4" Class="text-center">@mode.Name</MudText>
                        </MudStack>
                        <MudText Typo="Typo.body1" Class="text-center" Style="opacity: 0.8;">
                            @mode.Description
                        </MudText>
                        <MudButton 
                            Variant="Variant.Filled" 
                            Color="Color.Primary" 
                            FullWidth="true"
                            Class="mt-4"
                            @onclick="@(()=>Selected(mode))">
                            Explore @mode.Name
                            <MudIcon Icon="Icons.Material.Filled.ArrowForward" Class="ml-2" />
                        </MudButton>
                    </MudStack>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>

    <!-- Features Section -->
    <MudPaper Elevation="0" Class="features-section pa-8 mt-12">
        <MudText Typo="Typo.h4" Class="text-center mb-6">Why Choose Our Wallpaper Generator?</MudText>
        <MudGrid>
            <MudItem xs="12" sm="4">
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudIcon Icon="Icons.Material.Filled.AutoAwesome" Size="Size.Large" Color="Color.Primary" />
                    <MudText Typo="Typo.h6" Class="text-center">Algorithmic Art</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">Unique patterns generated by mathematical algorithms</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudIcon Icon="Icons.Material.Filled.Palette" Size="Size.Large" Color="Color.Secondary" />
                    <MudText Typo="Typo.h6" Class="text-center">Hand-Drawn Art</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">Curated collection of artistic wallpapers</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudIcon Icon="Icons.Material.Filled.Download" Size="Size.Large" Color="Color.Tertiary" />
                    <MudText Typo="Typo.h6" Class="text-center">Easy Download</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">High-quality wallpapers ready for download</MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

<style>
    .hero-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        border-radius: 16px;
        border: 1px solid #e2e8f0;
    }

    .mode-card {
        border-radius: 16px;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 1px solid #e2e8f0;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    }

    .mode-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1) !important;
        border-color: #6366f1;
    }

    .features-section {
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        border-radius: 16px;
        border: 1px solid #e2e8f0;
    }

    .mode-card.creative-hover {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border-color: #f59e0b;
    }

    .mode-card.generative-hover {
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
        border-color: #3b82f6;
    }
</style>