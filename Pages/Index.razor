@page "/"
<PageTitle>Wallpaper Generator</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-2xl border border-slate-200 p-8 mb-8">
        <div class="text-center space-y-4">
            <h1 class="text-4xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                🎨 Wallpaper Generator
            </h1>
            <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                Create stunning, algorithm-generated wallpapers or explore hand-drawn artistic creations
            </p>
        </div>
    </div>

    <!-- Mode Selection Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        @foreach (var mode in modes)
        {
            <div class="group cursor-pointer" @onclick="@(()=>Selected(mode))">
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-primary @mode.CardClass">
                    <div class="text-center space-y-6">
                        <div class="flex justify-center">
                            <div class="w-16 h-16 rounded-full bg-gradient-to-r from-primary to-secondary flex items-center justify-center text-white text-2xl">
                                @if (mode.Name == "Creative")
                                {
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                                    </svg>
                                }
                            </div>
                        </div>
                        <h3 class="text-2xl font-semibold text-slate-800">@mode.Name</h3>
                        <p class="text-slate-600">@mode.Description</p>
                        <button class="w-full bg-gradient-to-r from-primary to-secondary text-white py-3 px-6 rounded-lg font-medium hover:shadow-lg transition-all duration-300 flex items-center justify-center space-x-2">
                            <span>Explore @mode.Name</span>
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Features Section -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-2xl border border-slate-200 p-8">
        <h2 class="text-3xl font-bold text-center text-slate-800 mb-8">Why Choose Our Wallpaper Generator?</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center space-y-4">
                <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-slate-800">Algorithmic Art</h3>
                <p class="text-slate-600">Unique patterns generated by mathematical algorithms</p>
            </div>
            <div class="text-center space-y-4">
                <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-slate-800">Hand-Drawn Art</h3>
                <p class="text-slate-600">Curated collection of artistic wallpapers</p>
            </div>
            <div class="text-center space-y-4">
                <div class="w-16 h-16 bg-tertiary rounded-full flex items-center justify-center mx-auto">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-slate-800">Easy Download</h3>
                <p class="text-slate-600">High-quality wallpapers ready for download</p>
            </div>
        </div>
    </div>
</div>