@page "/"
<PageTitle>Wallpaper Studio - Algorithmic Art Generator</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Hero Section -->
    <div class="hero-section relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/5 to-purple-500/5"></div>
        <div class="relative text-center space-y-6">
            <div class="inline-flex items-center space-x-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full border border-indigo-200 text-sm text-indigo-600 font-medium mb-4">
                <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                <span>Algorithm-Powered Art Generation</span>
            </div>
            <h1 class="text-5xl md:text-6xl font-bold gradient-text leading-tight">
                Create Stunning
                <br />
                <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                    Digital Art
                </span>
            </h1>
            <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
                Transform your screen with algorithm-generated masterpieces or explore hand-crafted artistic wallpapers. 
                Every creation is unique, every download is instant.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
                <div class="flex items-center space-x-2 text-slate-500">
                    <i class="fas fa-check-circle w-5 h-5 text-green-500"></i>
                    <span>100% Free</span>
                </div>
                <div class="flex items-center space-x-2 text-slate-500">
                    <i class="fas fa-check-circle w-5 h-5 text-green-500"></i>
                    <span>High Resolution</span>
                </div>
                <div class="flex items-center space-x-2 text-slate-500">
                    <i class="fas fa-check-circle w-5 h-5 text-green-500"></i>
                    <span>Instant Download</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Mode Selection Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        @foreach (var mode in modes)
        {
            <div class="group cursor-pointer" @onclick="@(()=>Selected(mode))">
                <div class="art-card card-hover relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="relative text-center space-y-6">
                        <div class="flex justify-center">
                            <div class="w-20 h-20 rounded-2xl bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                                @if (mode.Name == "Creative")
                                {
                                    <i class="fas fa-image w-10 h-10"></i>
                                }
                                else
                                {
                                    <i class="fas fa-magic w-10 h-10"></i>
                                }
                            </div>
                        </div>
                        <div>
                            <h3 class="text-3xl font-bold text-slate-800 mb-2">@mode.Name</h3>
                            <p class="text-lg text-slate-600 mb-6">@mode.Description</p>
                        </div>
                        <button class="w-full btn-primary flex items-center justify-center space-x-3 py-4 text-lg">
                            <span>Explore @mode.Name</span>
                            <i class="fas fa-arrow-right w-6 h-6 group-hover:translate-x-1 transition-transform duration-300"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Features Section -->
    <div class="hero-section">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-slate-800 mb-4">Why Choose Wallpaper Studio?</h2>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                Experience the perfect blend of technology and artistry
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-indigo-500 to-purple-600 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-magic w-8 h-8 text-white"></i>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Algorithm-Generated Art</h3>
                <p class="text-slate-600 text-lg">Unique patterns created by advanced algorithms that never repeat</p>
            </div>
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-purple-500 to-pink-500 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-image w-8 h-8 text-white"></i>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Hand-Crafted Art</h3>
                <p class="text-slate-600 text-lg">Curated collection of artistic wallpapers by talented creators</p>
            </div>
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-download w-8 h-8 text-white"></i>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Instant Download</h3>
                <p class="text-slate-600 text-lg">High-quality wallpapers ready for any device in seconds</p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
        <div class="inline-flex items-center space-x-4 px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-lg">
            <i class="fas fa-bolt w-8 h-8 text-white"></i>
            <span class="text-white text-xl font-semibold">Ready to create your perfect wallpaper?</span>
        </div>
    </div>
</div>