@page "/"
<PageTitle>Wallpaper Studio - Algorithmic Art Generator</PageTitle>

<div class="min-h-screen bg-white dark:bg-slate-900">
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="text-center space-y-8">
                <!-- Logo and Title -->
                <div class="flex justify-center">
                    <div class="w-20 h-20 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl">
                        <span class="text-4xl">🎨</span>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <h1 class="text-5xl md:text-7xl font-bold leading-tight">
                        <span class="bg-gradient-to-r from-slate-800 to-slate-600 dark:from-slate-100 dark:to-slate-300 bg-clip-text text-transparent">
                            Wallpaper
                        </span>
                        <br />
                        <span class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
                            Studio
                        </span>
                    </h1>
                    <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-300 max-w-4xl mx-auto leading-relaxed font-light">
                        Transform your screen with algorithm-generated masterpieces or explore hand-crafted artistic wallpapers. 
                        Every creation is unique, every download is instant.
                    </p>
                </div>

                <!-- Feature Pills -->
                <div class="flex flex-wrap justify-center gap-3 mt-8">
                    <div class="flex items-center space-x-2 px-4 py-2 bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400 rounded-full text-sm font-medium">
                        <span class="text-lg">✅</span>
                        <span>100% Free</span>
                    </div>
                    <div class="flex items-center space-x-2 px-4 py-2 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-400 rounded-full text-sm font-medium">
                        <span class="text-lg">📱</span>
                        <span>High Resolution</span>
                    </div>
                    <div class="flex items-center space-x-2 px-4 py-2 bg-purple-50 dark:bg-purple-900/20 text-purple-700 dark:text-purple-400 rounded-full text-sm font-medium">
                        <span class="text-lg">⬇️</span>
                        <span>Instant Download</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Card Selection -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            @foreach (var mode in modes)
            {
                <div class="group cursor-pointer" @onclick="@(()=>Selected(mode))" role="button" tabindex="0" @onkeypress="@((e) => { if (e.Key == "Enter") Selected(mode); })">
                    <div class="relative overflow-hidden bg-white dark:bg-slate-800 rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 group-hover:scale-105 border border-slate-200 dark:border-slate-700">
                        <!-- Card Image Container -->
                        <div class="relative overflow-hidden">
                            @if (mode.Name == "Creative")
                            {
                                <div class="aspect-video bg-gradient-to-br from-purple-500 via-pink-500 to-red-500 flex items-center justify-center relative group-hover:scale-110 transition-transform duration-500">
                                    <!-- Creative Art Preview -->
                                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300"></div>
                                    <div class="relative z-10 text-center text-white group-hover:scale-105 transition-transform duration-300">
                                        <div class="grid grid-cols-2 gap-2 mb-4">
                                            <div class="w-8 h-8 bg-white/30 rounded-lg flex items-center justify-center group-hover:bg-white/40 transition-colors duration-300">
                                                <span class="text-lg group-hover:scale-110 transition-transform duration-300">🎨</span>
                                            </div>
                                            <div class="w-8 h-8 bg-white/30 rounded-lg flex items-center justify-center group-hover:bg-white/40 transition-colors duration-300">
                                                <span class="text-lg group-hover:scale-110 transition-transform duration-300">🖌️</span>
                                            </div>
                                            <div class="w-8 h-8 bg-white/30 rounded-lg flex items-center justify-center group-hover:bg-white/40 transition-colors duration-300">
                                                <span class="text-lg group-hover:scale-110 transition-transform duration-300">🖼️</span>
                                            </div>
                                            <div class="w-8 h-8 bg-white/30 rounded-lg flex items-center justify-center group-hover:bg-white/40 transition-colors duration-300">
                                                <span class="text-lg group-hover:scale-110 transition-transform duration-300">💖</span>
                                            </div>
                                        </div>
                                        <h3 class="text-lg font-bold">Hand-Crafted Art</h3>
                                        <p class="text-sm opacity-90">Beautiful artistic designs</p>
                                    </div>
                                    <!-- Floating particles effect -->
                                    <div class="absolute inset-0 pointer-events-none">
                                        <div class="absolute top-4 left-4 w-2 h-2 bg-white/40 rounded-full animate-pulse"></div>
                                        <div class="absolute top-8 right-6 w-1 h-1 bg-white/50 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
                                        <div class="absolute bottom-6 left-8 w-1.5 h-1.5 bg-white/30 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
                                        <div class="absolute bottom-4 right-4 w-1 h-1 bg-white/60 rounded-full animate-pulse" style="animation-delay: 1.5s;"></div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="aspect-video bg-gradient-to-br from-cyan-500 via-blue-500 to-indigo-600 flex items-center justify-center relative group-hover:scale-110 transition-transform duration-500">
                                    <!-- Generative Art Preview -->
                                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300"></div>
                                    <div class="relative z-10 text-center text-white group-hover:scale-105 transition-transform duration-300">
                                        <div class="grid grid-cols-3 gap-1 mb-4">
                                            <div class="w-6 h-6 bg-white/30 rounded-full group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-110"></div>
                                            <div class="w-6 h-6 bg-white/30 rounded-full group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-110" style="animation-delay: 0.1s;"></div>
                                            <div class="w-6 h-6 bg-white/30 rounded-full group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-110" style="animation-delay: 0.2s;"></div>
                                            <div class="w-6 h-6 bg-white/30 rounded-full group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-110" style="animation-delay: 0.3s;"></div>
                                            <div class="w-6 h-6 bg-white/30 rounded-full group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-110" style="animation-delay: 0.4s;"></div>
                                            <div class="w-6 h-6 bg-white/30 rounded-full group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-110" style="animation-delay: 0.5s;"></div>
                                        </div>
                                        <div class="space-y-1">
                                            <div class="w-16 h-1 bg-white/40 rounded mx-auto group-hover:bg-white/50 transition-colors duration-300 group-hover:scale-105"></div>
                                            <div class="w-12 h-1 bg-white/30 rounded mx-auto group-hover:bg-white/40 transition-colors duration-300 group-hover:scale-105" style="animation-delay: 0.1s;"></div>
                                            <div class="w-14 h-1 bg-white/35 rounded mx-auto group-hover:bg-white/45 transition-colors duration-300 group-hover:scale-105" style="animation-delay: 0.2s;"></div>
                                        </div>
                                        <h3 class="text-lg font-bold mt-2">Algorithm Generated</h3>
                                        <p class="text-sm opacity-90">Mathematical patterns</p>
                                    </div>
                                    <!-- Animated grid lines -->
                                    <div class="absolute inset-0 pointer-events-none">
                                        <div class="absolute top-1/4 left-0 right-0 h-px bg-white/20 group-hover:bg-white/30 transition-colors duration-300"></div>
                                        <div class="absolute top-1/2 left-0 right-0 h-px bg-white/20 group-hover:bg-white/30 transition-colors duration-300"></div>
                                        <div class="absolute top-3/4 left-0 right-0 h-px bg-white/20 group-hover:bg-white/30 transition-colors duration-300"></div>
                                        <div class="absolute left-1/4 top-0 bottom-0 w-px bg-white/20 group-hover:bg-white/30 transition-colors duration-300"></div>
                                        <div class="absolute left-1/2 top-0 bottom-0 w-px bg-white/20 group-hover:bg-white/30 transition-colors duration-300"></div>
                                        <div class="absolute left-3/4 top-0 bottom-0 w-px bg-white/20 group-hover:bg-white/30 transition-colors duration-300"></div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Card Content -->
                        <div class="p-8">
                            <h3 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-3">@mode.Name</h3>
                            <p class="text-lg text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">@mode.Description</p>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-slate-500 dark:text-slate-400 font-medium">Explore Collection</span>
                                <span class="text-slate-400 text-lg group-hover:translate-x-2 transition-transform duration-300">→</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Floating Action Button -->
    <div class="fixed bottom-6 right-6 z-40">
        <button @onclick="NavigateToGenerative" 
                class="fab-btn group" 
                title="Create New Artwork">
            <span class="text-2xl group-hover:scale-110 transition-transform duration-300">✨</span>
        </button>
    </div>
</div>