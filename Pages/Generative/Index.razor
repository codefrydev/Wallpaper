@page "/Generative"
<PageTitle>Generative Art - Wallpaper Studio</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section -->
    <div class="hero-section relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/5 to-purple-500/5"></div>
        <div class="relative text-center space-y-6">
            <div class="inline-flex items-center space-x-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full border border-indigo-200 text-sm text-indigo-600 font-medium mb-4">
                <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
                <span>Algorithm-Powered Pattern Generation</span>
            </div>
            <div class="w-20 h-20 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto shadow-lg">
                <i class="fas fa-magic w-10 h-10 text-white"></i>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold gradient-text">
                Generative Art Gallery
            </h1>
            <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
                Discover infinite possibilities with algorithm-generated patterns. Each creation is unique, 
                mathematically beautiful, and ready to become your perfect wallpaper.
            </p>
        </div>
    </div>

    <!-- Art Gallery Grid -->
    <div class="art-grid mb-16">
        @foreach (var item in generativeDraws)
        {
            <div class="group cursor-pointer" @onclick="@(()=>NavigateTo(item))">
                <div class="art-card card-hover relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="relative text-center space-y-4">
                        <div class="canvas-container group-hover:scale-105 transition-transform duration-300">
                            <SKCanvasView 
                                @ref="item.CanvasReference"
                                OnPaintSurface="@item.OnPaintSurface"
                                style="@($"height: {item.Height}px; width: {item.Width}px; border-radius: 8px;")"
                                @onclick="@(()=>NavigateTo(item))" 
                                id="@item.Id" 
                                IgnorePixelScaling="true" />
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-slate-800 mb-1">@item.GetType().Name</h3>
                            <p class="text-slate-600 text-sm">Algorithmic pattern generation</p>
                        </div>
                        <button class="w-full btn-primary flex items-center justify-center space-x-2 py-3">
                            <i class="fas fa-download w-5 h-5"></i>
                            <span>Customize & Download</span>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Info Section -->
    <div class="hero-section">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-slate-800 mb-4">How Generative Art Works</h2>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                Experience the magic of algorithmic creativity
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-indigo-500 to-purple-600 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-cpu w-8 h-8 text-white"></i>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Smart Algorithms</h3>
                <p class="text-slate-600 text-lg">Advanced mathematical algorithms create unique, never-repeating patterns</p>
            </div>
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-purple-500 to-pink-500 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-cog w-8 h-8 text-white"></i>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Customizable</h3>
                <p class="text-slate-600 text-lg">Adjust colors, size, and parameters to create your perfect design</p>
            </div>
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-wand-magic-sparkles w-8 h-8 text-white"></i>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Instant Download</h3>
                <p class="text-slate-600 text-lg">Get high-resolution wallpapers instantly, ready for any device</p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
        <div class="inline-flex items-center space-x-4 px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-lg">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <span class="text-white text-xl font-semibold">Ready to create your algorithmic masterpiece?</span>
        </div>
    </div>
</div>