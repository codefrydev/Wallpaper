@page "/Creative"
@using Models
@inject Data Datas
<PageTitle>Creative Art - Wallpaper Studio</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section -->
    <div class="hero-section relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-500/5 to-pink-500/5"></div>
        <div class="relative text-center space-y-6">
            <div class="inline-flex items-center space-x-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full border border-purple-200 text-sm text-purple-600 font-medium mb-4">
                <div class="w-2 h-2 bg-pink-400 rounded-full animate-pulse"></div>
                <span>Hand-Crafted Artistic Collection</span>
            </div>
            <div class="w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center mx-auto shadow-lg">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                </svg>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                Creative Art Gallery
            </h1>
            <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
                Immerse yourself in a curated collection of hand-drawn artistic wallpapers. 
                Each piece tells a story, crafted with passion by talented artists.
            </p>
        </div>
    </div>

    <!-- Art Gallery Grid -->
    <div class="art-grid mb-16">
        @foreach(var item in Datas.VideosData)
        {
            <div class="group cursor-pointer" @onclick="@(()=>OpenDialog(item))">
                <div class="art-card card-hover relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-pink-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="relative text-center space-y-4">
                        <div class="canvas-container group-hover:scale-105 transition-transform duration-300 overflow-hidden">
                            <img 
                                src="@item.ThumbNailUrl" 
                                alt="@item.Description" 
                                class="w-full h-64 object-cover rounded-lg group-hover:scale-105 transition-transform duration-300" />
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-slate-800 mb-1">@item.Name</h3>
                            <p class="text-slate-600 text-sm">@item.Description</p>
                        </div>
                        <button class="w-full btn-secondary flex items-center justify-center space-x-2 py-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <span>View & Download</span>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Info Section -->
    <div class="hero-section">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-slate-800 mb-4">About Creative Art</h2>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                Where human creativity meets digital perfection
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-purple-500 to-pink-500 group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Hand-Crafted</h3>
                <p class="text-slate-600 text-lg">Original artwork created by talented artists with passion and skill</p>
            </div>
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-yellow-500 to-orange-500 group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">Curated Collection</h3>
                <p class="text-slate-600 text-lg">Carefully selected high-quality pieces from the best artists</p>
            </div>
            <div class="feature-card group">
                <div class="feature-icon bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-slate-800">High Resolution</h3>
                <p class="text-slate-600 text-lg">Perfect for any screen size and device with crystal clear quality</p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
        <div class="inline-flex items-center space-x-4 px-8 py-4 bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl shadow-lg">
            <i data-lucide="heart" class="w-8 h-8 text-white"></i>
            <span class="text-white text-xl font-semibold">Discover your next artistic inspiration</span>
        </div>
    </div>

    <!-- Custom Modal -->
    @if (showModal && selectedImage != null)
    {
        <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50 backdrop-blur-sm" @onclick="CloseModal">
            <div class="relative bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden" @onclick:stopPropagation="true">
                <!-- Modal Header -->
                <div class="flex items-center justify-between p-6 border-b border-slate-200">
                    <h3 class="text-2xl font-bold text-slate-800">@selectedImage.Name</h3>
                    <button @onclick="CloseModal" class="p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg transition-colors">
                        <i data-lucide="x" class="w-6 h-6"></i>
                    </button>
                </div>
                
                <!-- Modal Content -->
                <div class="p-6">
                    <div class="flex justify-center mb-6">
                        <img src="@selectedImage.ThumbNailUrl" 
                             alt="@selectedImage.Description" 
                             class="max-w-full max-h-96 object-contain rounded-lg shadow-lg" />
                    </div>
                    
                    @if (!string.IsNullOrEmpty(selectedImage.Description))
                    {
                        <p class="text-slate-600 text-center mb-6">@selectedImage.Description</p>
                    }
                    
                    <!-- Modal Actions -->
                    <div class="flex gap-4 justify-center">
                        <button @onclick="CloseModal" 
                                class="px-6 py-3 bg-slate-100 text-slate-700 rounded-lg font-medium hover:bg-slate-200 transition-colors">
                            Cancel
                        </button>
                        <button @onclick="@(() => DownloadImage(selectedImage))" 
                                class="px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg font-medium hover:shadow-lg transition-all duration-300 flex items-center space-x-2">
                            <i data-lucide="download" class="w-5 h-5"></i>
                            <span>Download</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Inject] public IJSRuntime JSRuntime { get; set; } = null!;

    private async Task DownloadImage(Drawing drawing)
    {
        await JSRuntime.InvokeVoidAsync("downloadImageUrl", drawing.ThumbNailUrl, drawing.Name);
        CloseModal();
    }
}